{
  "name": "profilic-server",
  "description": "A basic user-profile-as-a-service server",
  "version": "0.0.1",
  "devDependencies": {
    "cross-env": "^5.0.5",
    "newman": "^3.8.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.0",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "jsonwebtoken": "^8.1.0",
    "jwt-decode": "^2.2.0",
    "mongodb": "^2.2.31",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "winston": "^2.3.1"
  },
  "scripts": {
    "startdb": "node src/server/bin/startdb.js",
    "stopdb": "node src/server/bin/stopdb.js",
    "start": "nodemon src/server/server.js",
    "lazyboot": "concurrently --names \"DB,APP\" --allow-restart \"yarn startdb\" \"yarn start\"",
    "test": "newman run tests/postman-tests.json --environment tests/postman-env-dev.json"
  }
}
